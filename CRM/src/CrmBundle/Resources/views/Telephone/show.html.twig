{% extends 'base.html.twig' %}

{% block body %}
    <h1>Telephone</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ telephone.id }}</td>
            </tr>
            <tr>
                <th>Telno</th>
                <td>{{ telephone.telNo }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ telephone.type }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('telephone_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('telephone_edit', { 'id': telephone.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
