{% extends 'base.html.twig' %}

{% block body %}
    <h1>Person</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ Person.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ Person.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ Person.surname }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ Person.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('new_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('new_edit', { 'id': Person.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
